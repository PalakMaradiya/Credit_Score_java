<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashActivity"
    android:background="#A5D7E8">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginHorizontal="@dimen/_60sdp"
                    android:src="@drawable/i1"
                    app:cardCornerRadius="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Credit Score "
                    android:textSize="@dimen/_25sdp"
                    android:textColor="#472183"
                    android:layout_marginHorizontal="@dimen/_40sdp"
                    android:typeface="serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="A credit Score is an indicator of a borrower's abillty to make a credit payments on time"
                    android:textColor="#4B56D2"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="@dimen/_20sdp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="Next"
                    android:id="@+id/btnNext"
                    android:padding="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:gravity="center"/>


            </LinearLayout>






</LinearLayout>